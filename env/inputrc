# Don't require two tabs to show all completions
set show-all-if-ambiguous on

# Enable case-insensitive tab completion
set completion-ignore-case on

# Allow the use the "up" and "down" keys to
# incrementally search through command history
"\e[A": history-search-backward
"\e[B": history-search-forward

# Allow the use of the Home/End keys
"\e[1~": beginning-of-line
"\e[4~": end-of-line

# Mappings for "page up" and "page down" to
# step to the beginning/end of the history
"\e[5~": beginning-of-history
"\e[6~": end-of-history

# Allow the use of the Delete/Insert keys
"\e[3~": delete-char
"\e[2~": quoted-insert

# Mappings for Ctrl-left-arrow and Ctrl-right-arrow for word moving,
# Option-left-arrow and Option-right-arrow on macOS
"\e[1;5C": forward-word
"\e[1;5D": backward-word
"\e[5C": forward-word
"\e[5D": backward-word
"\e\e[C": forward-word
"\e\e[D": backward-word
